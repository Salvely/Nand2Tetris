// This class supports some execution-related services
class Sys {
    // calls the init functions of the other OS classes and then
    // calls the Main.main() function. For internal use only;    
    function void init( );	
	// halts the progra	execution;
    function void halt( );
    // prints the error code on the screen and halts;
	function void error(int errorCode);
    // waits approximately duration milliseconds and returns.
	function void wait(int duration);
}